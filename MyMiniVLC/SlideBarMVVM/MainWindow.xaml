                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="Foreground" TargetName="Thumb" Value="Blue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Slider}">
                                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition MinWidth="{TemplateBinding MinWidth}" Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TickBar x:Name="TopTick" Grid.Column="0" Fill="{TemplateBinding Foreground}" Placement="Left" Visibility="Collapsed" Width="4"/>
                                        <TickBar x:Name="BottomTick" Grid.Column="2" Fill="{TemplateBinding Foreground}" Placement="Right" Visibility="Collapsed" Width="4"/>
                                        <Border x:Name="TrackBackground" BorderBrush="{StaticResource VerticalSliderTrackNormalBorder}" BorderThickness="1" Background="{StaticResource HorizontalSliderTrackNormalBackground}" Grid.Column="1" CornerRadius="1" HorizontalAlignment="center" Margin="0,5" Width="4.0">
                                            <Canvas Margin="-1,-6">
                                                <Rectangle x:Name="PART_SelectionRange" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Stroke="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" StrokeThickness="1.0" Visibility="Hidden" Width="4.0"/>
                                            </Canvas>
                                        </Border>
                                        <Track x:Name="PART_Track" Grid.Column="1">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource SliderRepeatButtonStyle}"/>
                                            </Track.DecreaseRepeatButton>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource SliderRepeatButtonStyle}"/>
                                            </Track.IncreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb x:Name="Thumb" Style="{StaticResource VerticalSliderThumbStyle}"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="TickPlacement" Value="TopLeft">
                                        <Setter Property="Visibility" TargetName="TopTick" Value="Visible"/>
                                        <Setter Property="Style" TargetName="Thumb" Value="{StaticResource VerticalSliderLeftThumbStyle}"/>
                                        <Setter Property="Margin" TargetName="TrackBackground" Value="2,5,0,5"/>
                                    </Trigger>
                                    <Trigger Property="TickPlacement" Value="BottomRight">
                                        <Setter Property="Visibility" TargetName="BottomTick" Value="Visible"/>
                                        <Setter Property="Style" TargetName="Thumb" Value="{StaticResource VerticalSliderRightThumbStyle}"/>
                                        <Setter Property="Margin" TargetName="TrackBackground" Value="0,5,2,5"/>
                                    </Trigger>
                                    <Trigger Property="TickPlacement" Value="Both">
                                        <Setter Property="Visibility" TargetName="TopTick" Value="Visible"/>
                                        <Setter Property="Visibility" TargetName="BottomTick" Value="Visible"/>
                                    </Trigger>
                                    <Trigger Property="IsSelectionRangeEnabled" Value="true">
                                        <Setter Property="Visibility" TargetName="PART_SelectionRange" Value="Visible"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="true">
                                        <Setter Property="Foreground" TargetName="Thumb" Value="Blue"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="RepeatButtonStyle" TargetType="{x:Type RepeatButton}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Rectangle VerticalAlignment="Center" Height="3" Fill="Red" Margin="6,0,0,0"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PathStyle" TargetType="{x:Type Path}"/>
        <DataTemplate x:Key="TemplateLibraryLstArtists">
        	<Grid>
        		<Grid HorizontalAlignment="Right" Height="15" VerticalAlignment="Bottom" Width="250">
        			<TextBlock TextWrapping="Wrap" Text="{Binding Name}"/>
        		</Grid>
        	</Grid>
        </DataTemplate>
        <DataTemplate x:Key="TemplateLibraryLstAlbums">
            <Grid>
                <Grid HorizontalAlignment="Right" Height="15" VerticalAlignment="Bottom" Width="150">
                    <TextBlock TextWrapping="Wrap" Text="{Binding Name}"/>
                </Grid>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="TemplateLibraryLstSongs">
            <Grid>
                <Grid HorizontalAlignment="Right" Height="15" VerticalAlignment="Bottom" Width="150">
                    <TextBlock TextWrapping="Wrap" Text="{Binding Name}"/>
                </Grid>
            </Grid>
        </DataTemplate>
    	<System:Double x:Key="DoubleSpeedRatio">1</System:Double>
    </Window.Resources>
    
     <Window.InputBindings>
        <KeyBinding Command="{Binding OpenDialogCommand, Source={StaticResource ViewModelDataSource}}"   Key="O" Modifiers="Control"/>
    </Window.InputBindings>
    <TabControl x:Name="tabControl" Margin="0" DataContext="{Binding Source={StaticResource ViewModelDataSource}}">
        <TabControl.InputBindings>
            <KeyBinding Key="O" Modifiers="Control" Command="{Binding OpenDialogCommand}" />
        </TabControl.InputBindings>
		<TabItem x:Name="tabPlayer" Header="Player">            
            <Grid Margin="0">
				<Grid.Background>
					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="Black" Offset="1"/>
						<GradientStop Color="#FF0058FF"/>
					</LinearGradientBrush>
				</Grid.Background>
                <Grid x:Name="gridPlayerSlider" Height="23.8" Margin="0,0,0,47.04" VerticalAlignment="Bottom">
                    <local:SpecialSlider x:Name="slider" Maximum="{Binding Maximum, ElementName=MediaElementBehavior}" Minimum="0.0" Background="{x:Null}" Foreground="{x:Null}" IsMoveToPointEnabled="True" Value="{Binding Position, ElementName=MediaElementBehavior, Mode=TwoWay}"/>
                </Grid>
				<Grid x:Name="gridControlAction" Height="47.733" VerticalAlignment="Bottom">
					<Button x:Name="buttonPlay" Content="{Binding PlayPauseButtonText}"  Margin="0,0,173.333,0" Command="{Binding PlayRequest}" HorizontalAlignment="Right" Width="41.8" d:LayoutOverrides="HorizontalAlignment"/>
                    <Button x:Name="openButton" Content="..." HorizontalAlignment="Right" Width="45.333" Command="{Binding OpenDialogCommand}"/>
                    <Button x:Name="stopButton" Content="Stop" Margin="249,0,215.133,0" Command="{Binding StopRequest}" d:LayoutOverrides="HorizontalAlignment"/>
					<Button x:Name="repeatButton" Content="{Binding RepeatButtonText}" Margin="161.867,0,0,0" Command="{Binding RepeatCommand}" HorizontalAlignment="Left" Width="62.4"/>
					<Slider x:Name="volumeSlider" HorizontalAlignment="Right" Margin="0,17.6,45.333,8" Width="99.267" Minimum="0" Maximum="1" Value="{Binding Volume, ElementName=MediaElementBehavior, Mode=TwoWay}" IsMoveToPointEnabled="True"/>
                    <local:ButtonCustom x:Name="prevButton" Content="&lt;&lt;" Margin="224.267,0,0,0" HorizontalAlignment="Left" Width="24.733"/>
                    <local:ButtonCustom x:Name="nextButton" Content="&gt;&gt;" HorizontalAlignment="Right" Margin="0,0,148.6,0" Width="24.733"/>
                    <!--<local:ButtonCustom x:Name="test" Content="test" Width="61" Margin="95,0,337,0" />-->
                    <TextBlock x:Name="timeBlock" HorizontalAlignment="Left" Height="47.733" Margin="0" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="88.8" TextAlignment="Center" Foreground="White" Text="{Binding Time, ElementName=MediaElementBehavior}"/>
				</Grid>
                <Grid x:Name="gridMediaElement" Margin="0,0,0,74.84" d:LayoutOverrides="HorizontalAlignment" Background="#00000000" AllowDrop="True">
                    <i:Interaction.Behaviors>
                        <local:GridBehavior x:Name="GridBehavior"/>
                    </i:Interaction.Behaviors>
					<Image Source="ct9gh5ot.jpg" Visibility="{Binding Video, ElementName=MediaElementBehavior}" d:LayoutOverrides="Width" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <local:MediaElementCustom  LoadedBehavior="Manual" UnloadedBehavior="Manual" x:Name="MediaPlayer" Source="{Binding CurrentSourceMedia}" Opacity="100000" >
                        <i:Interaction.Behaviors>
                        	<local:MediaElementBehavior x:Name="MediaElementBehavior"/>
						</i:Interaction.Behaviors>
						<i:Interaction.Triggers>
							<i:EventTrigger SourceName="MediaPlayer" EventName="MediaOpened">
								<i:InvokeCommandAction Command="{Binding MediaOpenedCommand}"/>
							</i:EventTrigger>   
							<i:EventTrigger SourceName="MediaPlayer" EventName="MediaFailed">
								<i:InvokeCommandAction Command="{Binding MediaFailedCommand}"/>
							</i:EventTrigger>
							<i:EventTrigger SourceName="MediaPlayer" EventName="MediaEnded">
								<i:InvokeCommandAction Command="{Binding MediaEndedCommand}"/>
							</i:EventTrigger>
						</i:Interaction.Triggers>
                        <local:MediaElementCustom.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PlayState}" Value="Play" >
                                        <Setter Property="local:MediaElementCustom.Play" Value="Play"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PlayState}" Value="Pause" >
                                        <Setter Property="local:MediaElementCustom.Play" Value="Pause"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PlayState}" Value="Stop" >
                                        <Setter Property="local:MediaElementCustom.Play" Value="Stop"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </local:MediaElementCustom.Style>
                    </local:MediaElementCustom>
                    <TextBlock x:Name="nameLabel" TextWrapping="Wrap" Width="146.7" Foreground="White" TextAlignment="Center" Text="{Binding CurrentSourceName}" Height="52.533" VerticalAlignment="Top" HorizontalAlignment="Left"/>
				</Grid>
            </Grid>

        </TabItem>
        <TabItem x:Name="tabLibrary" Header="Library" DataContext="{Binding Source={StaticResource ViewModelLibrary}}">
			<Grid Background="#FFE5E5E5">
				<TextBlock HorizontalAlignment="Left" Height="21.666" Margin="8,49.04,0,0" TextWrapping="Wrap" Text="Artists" VerticalAlignment="Top" Width="150"/>
				<TextBlock Height="21.666" Margin="163,49.04,184.167,0" TextWrapping="Wrap" Text="Albums" VerticalAlignment="Top"/>
				<TextBlock HorizontalAlignment="Right" Height="21.666" Margin="0,49.04,8,0" TextWrapping="Wrap" Text="Songs" VerticalAlignment="Top" Width="172.167"/>
                <ListBox x:Name="lstArtists" Margin="8,74.706,0,8" HorizontalAlignment="Left" Width="250" ItemTemplate="{DynamicResource TemplateLibraryLstArtists}" ItemsSource="{Binding ArtistsLIST}" SelectedItem="{Binding SelectedArtist}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding LoadArtistCMD}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
                <!--MouseDoubleClick="lstArtists_MouseDoubleClick"-->
                <ListBox x:Name="lstAlbums" Margin="162,74.706,184.167,8" ItemTemplate="{DynamicResource TemplateLibraryLstAlbums}" ItemsSource="{Binding AlbumsLIST}" SelectedItem="{Binding SelectedAlbum}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding LoadAlbumCMD}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
                <!--MouseDoubleClick="lstAlbums_MouseDoubleClick"-->
                <ListBox x:Name="lstSongs" Margin="0,74.706,8,8" HorizontalAlignment="Right" Width="172.167" ItemTemplate="{DynamicResource TemplateLibraryLstSongs}" ItemsSource="{Binding SongsLIST}" SelectedItem="{Binding SelectedSong}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding PlaySongCMD}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
                <!--MouseDoubleClick="lstSongs_MouseDoubleClick"-->
                <Button x:Name="btnImport" Content="Import File" HorizontalAlignment="Right" Height="25.04" Margin="0,8,126,0" VerticalAlignment="Top" Width="75.167" />
                <!--Click="btnImport_Click"-->
                <Button x:Name="btnDir" Content="Import Directory" HorizontalAlignment="Right" Height="25.04" Margin="0,8,8,0" VerticalAlignment="Top" Width="114" />
                <!--Click="btnDir_Click"-->
			</Grid>
		</TabItem>
    </TabControl>
</Window>
